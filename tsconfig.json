{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@config": ["./config"],
      "@prisma": ["./prisma"],
      "@decorators": ["./decorators"],
      "@enums": ["./enums"],
    },
    "allowJs": true,
    "declaration": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "strictNullChecks": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
